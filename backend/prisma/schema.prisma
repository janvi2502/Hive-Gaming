generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  phone        String     @unique
  email        String?    @unique
  passwordHash String?
  role         UserRole   @default(USER)
  bookings     Booking[]
  createdAt    DateTime   @default(now())
}

enum UserRole {
  USER
  ADMIN
}

model Zone {
  id           Int        @id @default(autoincrement())
  name         String
  pricePerHour Int
  description  String?
  bookings     Booking[]
  createdAt    DateTime   @default(now())
}

model Booking {
  id           Int            @id @default(autoincrement())
  user         User?          @relation(fields: [userId], references: [id])
  userId       Int?
  zone         Zone           @relation(fields: [zoneId], references: [id])
  zoneId       Int
  date         DateTime
  startTime    String
  endTime      String
  status       BookingStatus  @default(PENDING)
  reminderSent Boolean        @default(false)
  createdAt    DateTime       @default(now())

  @@unique([zoneId, date, startTime])
}

model Admin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
